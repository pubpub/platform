{
	"extends": "tsconfig/base.json",
	"compilerOptions": {
		"tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
		"lib": ["ESNext"],
		"types": ["node"],
		"moduleResolution": "bundler",
		"paths": {
			"~/*": ["../core/*"]
		}
	},
	"include": ["./**/*.ts"],
	"exclude": ["dist", "build", "node_modules", ".turbo"]
}
