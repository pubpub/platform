{
	"files.associations": {
		"*.css": "tailwindcss"
	},
	"typescript.tsdk": "./core/node_modules/typescript/lib",
	"javascript.preferences.autoImportSpecifierExcludeRegexes": ["@prisma\\/client"],
	// these variables are necessary in order to correctly run seeds
	"playwright.env": {
		"NODE_OPTIONS": "--import=\"#register-loader\"",
		"SKIP_VALIDATION": "true",
		"DATABASE_URL": "postgresql://postgres:postgres@localhost:54322/postgres"
	},

	"prettier.enable": false,
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.codeActionsOnSave": {
			"source.biome": "always",
			"source.fixAll.biome": "always"
		}
	},
	"[javascript]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.codeActionsOnSave": {
			"source.biome": "always",
			"source.fixAll.biome": "always"
		}
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.codeActionsOnSave": {
			"source.biome": "always",
			"source.fixAll.biome": "always"
		}
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.codeActionsOnSave": {
			"source.biome": "always",
			"source.fixAll.biome": "always"
		}
	},
	"[json]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.codeActionsOnSave": {
			"source.biome": "always",
			"source.fixAll.biome": "always"
		}
	},
	"[astro]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.codeActionsOnSave": {
			"source.biome": "always",
			"source.fixAll.biome": "always"
		}
	},
	"tailwindCSS.files.exclude": [
		"**/.git/**",
		"**/node_modules/**",
		"**/.hg/**",
		"**/.svn/**",
		".local_data/**"
	]
}
