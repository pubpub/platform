{
	"name": "core",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"dev": "next dev -p 3000 | pino-pretty",
		"build": "SKIP_VALIDATION=true next build",
		"invite-users": "dotenv -e .env.local -e .env.development  tsx scripts/invite.ts",
		"lint": "dotenv -v SKIP_VALIDATION=true next lint",
		"lint:fix": "dotenv -v SKIP_VALIDATION=true next lint --fix",
		"format": "prettier --check . --ignore-path ../.gitignore",
		"make-kysely-types": "dotenv -e .env.local -e .env.development kanel",
		"migrate-dev": "dotenv -e .env.local -e .env.development prisma migrate dev && pnpm make-kysely-types",
		"migrate-deploy": "dotenv -e .env.local -e .env.development prisma migrate deploy",
		"migrate-diff": "dotenv -e .env.local -e .env.development prisma migrate diff",
		"migrate-docker": "dotenv -e .env.docker -- prisma migrate deploy",
		"prisma": "dotenv -e .env.local -e .env.development prisma",
		"prisma-studio": "dotenv -e .env.local -e .env.development prisma studio",
		"prebuild": "prisma generate",
		"start": "next start",
		"reset": "dotenv -e .env.local -e .env.development prisma migrate reset --preview-feature",
		"test": "vitest",
		"type-check": "tsc",
		"type-check-watch": "tsc --watch"
	},
	"files": [
		".next",
		"public"
	],
	"prisma": {
		"seed": "tsx prisma/seed.ts"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.445.0",
		"@aws-sdk/s3-request-presigner": "^3.445.0",
		"@faker-js/faker": "^8.0.2",
		"@honeycombio/opentelemetry-node": "^0.6.1",
		"@hookform/resolvers": "^3.3.1",
		"@opentelemetry/auto-instrumentations-node": "^0.41.1",
		"@prisma/client": "^5.2.0",
		"@sentry/nextjs": "^7.102.0",
		"@stoplight/elements": "^7.12.2",
		"@supabase/supabase-js": "^2.33.2",
		"@t3-oss/env-nextjs": "^0.9.2",
		"@tanstack/react-table": "^8.13.2",
		"@ts-rest/core": "^3.28.0",
		"@ts-rest/next": "^3.33.1",
		"@ts-rest/open-api": "^3.28.0",
		"ajv": "^8.12.0",
		"clsx": "^2.0.0",
		"contracts": "workspace:*",
		"diacritics": "^1.3.0",
		"eta": "^3.1.1",
		"graphile-worker": "^0.15.0",
		"jsonwebtoken": "^9.0.0",
		"logger": "workspace:*",
		"lucide-react": "^0.356.0",
		"next": "14.1.2",
		"kysely": "^0.27.2",
		"next-connect": "^1.0.0",
		"next-runtime-env": "^3.2.0",
		"nodemailer": "^6.9.5",
		"openapi3-ts": "^4.1.2",
		"pg": "^8.11.3",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-hook-form": "^7.46.1",
		"remove": "^0.1.5",
		"server-only": "^0.0.1",
		"tailwind-merge": "^1.14.0",
		"ui": "workspace:*",
		"use-debounce": "^10.0.0",
		"utils": "workspace:*",
		"uuid": "^9.0.0",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@pubpub/prettier-config": "workspace:*",
		"@pubpub/eslint-config": "workspace:*",
		"@preconstruct/next": "^4.0.0",
		"@tailwindcss/forms": "^0.5.6",
		"@testing-library/react": "^14.2.1",
		"@types/diacritics": "^1.3.1",
		"@types/jsonwebtoken": "^9.0.2",
		"@types/node": "20.3.1",
		"@types/nodemailer": "^6.4.9",
		"@types/react": "18.2.12",
		"@types/react-dom": "18.2.5",
		"@types/uuid": "^9.0.2",
		"@vitejs/plugin-react": "^4.2.1",
		"autoprefixer": "^10.4.14",
		"csv-parse": "^5.5.2",
		"dotenv-cli": "^7.2.1",
		"kanel": "^3.8.2",
		"kanel-kysely": "^0.3.2",
		"jsdom": "^24.0.0",
		"postcss": "^8.4.27",
		"prisma": "^5.2.0",
		"supabase": "^1.68.6",
		"tailwindcss": "^3.3.3",
		"ts-node": "^10.9.1",
		"tsconfig": "workspace:*",
		"tsx": "^3.13.0",
		"typescript": "5.4.2",
		"vitest": "^1.3.1",
		"vitest-tsconfig-paths": "^3.4.1",
		"yargs": "^17.7.2"
	},
	"eslintConfig": {
		"root": true,
		"extends": [
			"@pubpub/eslint-config/base",
			"@pubpub/eslint-config/next",
			"@pubpub/eslint-config/react"
		]
	},
	"prettier": "@pubpub/prettier-config"
}
