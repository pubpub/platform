{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"]
		},
		"start": {},
		"lint": {},
		"type-check": {},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"clean": {
			"cache": false
		},
		"format": {
			"outputs": ["node_modules/.cache/.prettiercache"],
			"outputMode": "new-only"
		}
	}
}
