{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"ui": "tui",
	"tasks": {
		"topo": {
			"dependsOn": ["^topo"]
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**", "storybook-static/**"]
		},
		"start": {},
		"lint": {
			"dependsOn": ["^topo"],
			"outputs": [".cache/.eslintcache"]
		},
		"lint:fix": {
			"dependsOn": ["^topo"],
			"outputs": [".cache/.eslintcache"]
		},
		"type-check": {
			"dependsOn": ["^topo"],
			"outputs": [".cache/tsbuildinfo.json"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"playwright:test": {
			"outputs": ["playwright-report"]
		},
		"clean": {
			"cache": false
		},
		"format": {
			"outputs": [".cache/.prettiercache"],
			"outputLogs": "new-only"
		},
		"format:fix": {
			"outputs": [".cache/.prettiercache"],
			"outputLogs": "new-only"
		},
		"test": {
			"dependsOn": ["^topo"],
			"outputs": [".cache/.vitestcache"]
		},
		"test-run": {
			"dependsOn": ["^topo"],
			"outputs": [".cache/.vitestcache"]
		},
		"//#turbo:p:build": {
			"inputs": ["packages/*/src/**"],
			"outputs": ["packages/*/dist/**"]
		}
	}
}
