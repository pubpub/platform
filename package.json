{
  "private": true,
  "scripts": {
    "build": "pnpm p:build && turbo build",
    "dev": "pnpm p:dev && turbo dev",
    "clean": "turbo clean",
    "start": "turbo start",
    "type-check": "turbo type-check",
    "p:dev": "preconstruct dev",
    "p:build": "preconstruct build",
    "format": "turbo format --continue -- --cache --cache-location node_modules/.cache/.prettiercache",
    "format:fix": "turbo format --continue -- --write --cache --cache-location node_modules/.cache/.prettiercache",
    "lint": "turbo lint --continue -- --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:fix": "turbo lint --continue -- --fix --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "test": "turbo test",
    "fix": "pnpm run lint:fix && pnpm run format:fix"
  },
  "devDependencies": {
    "@babel/core": "^7.22.17",
    "@babel/preset-env": "^7.22.15",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.22.15",
    "@changesets/cli": "^2.26.2",
    "@preconstruct/cli": "^2.8.4",
    "@pubpub/prettier-config": "workspace:*",
    "@turbo/gen": "^1.13.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.2.5",
    "turbo": "^1.13.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,scss,json,md}": [
      "prettier --write"
    ],
    "schema.prisma": [
      "npx prisma format"
    ]
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "prettier": "@pubpub/prettier-config",
  "packageManager": "pnpm@8.7.0",
  "prisma": {
    "schema": "core/prisma/schema.prisma"
  },
  "pnpm": {
    "patchedDependencies": {
      "@ts-rest/serverless@3.45.2": "patches/@ts-rest__serverless@3.45.2.patch"
    }
  }
}
